{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noEmitHelpers": true,
        "lib": [
            "dom",
            "es5",
            "es6",
            "es7"
        ],
        "types": [
            "ace",
            "electron",
            "jasmine",
            "node",
            "core-js"
        ]
    },
    "exclude": [
        "./node_modules"
    ],
    "filesGlob": [
        "./src/**/*.ts",
        "node_modules/zone.js/dist/zone.js.d.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "resolveGlobs": true,
        "forkChecker": true
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
